        SELECT a.*,IFNULL(b.lastSubmit,a.submitTime) lastSubmit,IFNULL(b.lastReply,a.username) lastReply FROM
        (SELECT topic.*,user.username FROM topic,user WHERE topic.hided=0 AND topic.deleted=0 AND topic.user_id=user.id) a
